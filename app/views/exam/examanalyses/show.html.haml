- model_class = Examanalysis
.page-header
  %h1=t 'exam.examanalysis.title'
= render 'shared/flashes'

.row
  .col-md-offset-1
    / Nav tabs
    %ul.nav.nav-tabs
      %li.active= link_to ((t 'exam.examanalysis.details')),"#examanalysis_details", "data-toggle" => "tab"
      
    .tab-content{style:"padding-top:1em"}
      #examanalysis_details.tab-pane.active
      %br
      /= render 'student_and_marks'
      = render "exam/examanalyses/#{current_user.college.code}/student_and_marks"
.row
  .col-md-4.col-md-offset-4
    %hr
    .form-actions
      = link_to content_tag(:i, "", :class => "fa fa-arrow-left ") + " " + t('.back', :default => t("helpers.links.back")), exam_examanalyses_path, :class => 'btn btn-default'
      - permitted_to? :edit, :exam_examanalyses do
        = link_to content_tag(:i, "", :class => "fa fa-edit") + " " + t('.edit', :default => t("helpers.links.edit")), edit_exam_examanalysis_path(@examanalysis),  :class => 'btn btn-primary' 
      - permitted_to? :destroy, :exam_examanalyses do
        = link_to content_tag(:i, "", :class => "fa fa-trash-o icon-white") + " " + t('.destroy', :default => t("helpers.links.destroy")), |
          exam_examanalysis_path(@examanalysis),                                                                                                    |
          :method => 'delete',                                                                                                           |
          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },                   |
          :class => 'btn btn-danger'
