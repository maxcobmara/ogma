- model_class = AverageCourse
.page-header
  %h1=t('exam.average_course.new') 
  
= render 'shared/flashes'

.row.fluid
  = form_for [:exam, @average_course], html: { class: 'form-horizontal' }  do |f| 
    = render 'shared/error_messages', object: f.object
    = hidden_field_tag :redirect_location, exam_average_courses_path 
    = f.hidden_field :subject_id, value: params[:subject_id]
    = f.hidden_field :lecturer_id, value: params[:lecturer_id]
    
    = render :partial => 'form', :locals => {:f => f}        

    .col-md-offset-1
      .form-group
        .col-sm-offset-3.col-sm-1
          = link_to content_tag(:i, "", :class => "fa fa-arrow-left ") + " " + t('.back', :default => t("helpers.links.back")), exam_evaluate_courses_path, :class => 'btn btn-default'
        .col-sm-2
          = f.submit t('create'),  :name=> :submit_button, class: "btn btn-primary"
