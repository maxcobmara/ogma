.col-md-offset-2
  .form-group
    .col-sm-2.control-label
      &nbsp;
    .col-md-6
      &nbsp;

  .form-group
    .col-sm-2.control-label
      = f.label :statusremark
    .col-md-6
      = f.text_area :statusremark
	  
  .form-group
    .col-sm-2.control-label
      = f.label :approvedt
    .col-md-2
      = f.text_field :approvedt, class: 'date_picker form-control'
   
  .form-group
    .col-sm-2.control-label
      = f.label :approver_id
    .col-md-6
      - if current_user.college.code=="kskb"
        = f.collection_select :approver_id, Staff.where("id IN (?)", @examquestion.question_approver).order(:name), :id, :name, {:include_blank => 'Please select approver'},{class: 'selectpicker', "data-width"=>"230px"}
      - else
        = f.collection_select :approver_id, Staff.all, :id, :staff_with_rank, {:include_blank => 'Please select approver'},{class: 'selectpicker', "data-width"=>"230px"}
      /= f.collection_select :approver_id, Staff.where("id IN (?)", @examquestion.question_approver).order(:name), :id, :name, :include_blank => 'Please select approver', :selected => current_user.staff_id
      /= f.collection_select :approver_id, Staff.find(:all, :order => :name, :conditions => ["id IN (?)", @examquestion.question_approver]), :id, :name, :include_blank => true
      /= f.collection_select :approver_id, Staff.find(:all, :order => :name), :id, :name, :include_blank => true 