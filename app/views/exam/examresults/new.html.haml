- model_class = Examresult
.page-header
  %h1=t('exam.examresult.new') 
  
= render 'shared/flashes'

.row.fluid
  = form_for [:exam, @examresult], html: { class: 'form-horizontal' }  do |f| 
    = render 'shared/error_messages', object: f.object
    = hidden_field_tag :redirect_location, exam_examresults_path 
    
    = render :partial => 'form', :locals => {:f => f}        

    ////TODO - DISPLAY buttons only if student of selected program, semester - sit for selected exam dates
    .col-md-offset-1
      .form-group
        .col-sm-offset-3.col-sm-1
          = link_to content_tag(:i, "", :class => "fa fa-arrow-left ") + " " + t('.back', :default => t("helpers.links.back")), exam_examresults_path, :class => 'btn btn-default'
        .col-sm-3
          = f.submit t('create'),  :name=> :submit_button, class: "btn btn-primary"
