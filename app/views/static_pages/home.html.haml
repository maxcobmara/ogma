 - unless user_signed_in?  
  .row.login
   .col-md-3.col-md-offset-3
    %h1 Login
    = form_for(resource, :as => resource_name, :url => session_path(resource_name), class: 'form-horizontal', role: 'form') do |f|
     .form-group
      %label.sr-only{:for => "login_email"} Email address
      = f.text_field :email, placeholder: "Email", class: "form-control", type: "email", id: "login_email" #=> (t 'home.email')
     .form-group
      %label.sr-only{:for => "login_password"} Password
      = f.password_field :password, placeholder: "Password", class: "form-control", type: "password", id: "login_password" #=> (t 'home.password')
     .col-md-7
      - if devise_mapping.rememberable?
       .checkbox
        = f.check_box :remember_me, :type => "checkbox"
        = f.label :remember_me
     .col-md-5
      = f.submit "Sign-In", :class => "btn btn-primary", :type => "submit", style: "float:right; margin-top:10px; margin-right: -15px" #(t 'home.signin')
   .col-md-2.signup
    %h1 Signup
    %p Don't have a login? Sign-up right now by clicking on the awesome button
    %br
    =link_to "Sign up now", new_user_registration_path
    %br




