- model_class = Document
.page-header
  %h1= t 'document.new'

= render 'shared/flashes'

.row
  = form_for @document,  html: { multipart: true, class: 'form-horizontal' }  do |f| 
    = render 'shared/error_messages', object: f.object
    .col-md-offset-1
      = render :partial => 'form', :locals => {:f => f}
      .form-group
        .col-sm-offset-4.col-sm-1
          = link_to content_tag(:i, "", :class => "fa fa-arrow-left ") + " " + t('.back', :default => t("helpers.links.back")), documents_path, :class => 'btn btn-default'
        .col-sm-2
          = f.submit t('create'), class: "btn btn-primary"
		 
