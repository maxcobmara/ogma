- provide(:title, 'Student Bed Allocation')
- model_class = Tenant
.page-header
  %h1= t 'tenant.title', :default => model_class.model_name.human
%p#notice= notice

.row
  .col-md-offset-2
    %dl.dl-horizontal
      %dt= t 'location.name', :default => model_class.human_attribute_name(:location) + ":"
      %dd= @tenant.try(:location).try(:name)

    - unless @tenant.student.blank?
      %dl.dl-horizontal
        %dt= t 'student.name', :default =>  model_class.human_attribute_name(:student_id) + ":"
        %dd= @tenant.try(:student).try(:name)
    
    - unless @tenant.staff.blank?
      %dl.dl-horizontal
        %dt= t 'staff.name', :default =>  model_class.human_attribute_name(:staff_id) + ":"
        %dd= @tenant.try(:staff).try(:name)

    %dl.dl-horizontal
      %dt= t 'tenant.keyaccept', :default =>  model_class.human_attribute_name(:keyaccept) + ":"
      %dd= @tenant.keyaccept.try(:strftime, "%d/%m/%Y")

    %dl.dl-horizontal
      %dt= t 'tenant.keyexpectedreturn', :default =>  model_class.human_attribute_name(:keyexpectedreturn) + ":"
      %dd= @tenant.keyexpectedreturn.try(:strftime, "%d/%m/%Y")
  
    %dl.dl-horizontal
      %dt= t 'tenant.keyreturned', :default =>  model_class.human_attribute_name(:keyreturned) + ":"
      %dd= @tenant.keyreturned.try(:strftime, "%d/%m/%Y")
  
    %dl.dl-horizontal
      %dt= t 'tenant.force_vacate', :default =>  model_class.human_attribute_name(:force_vacate) + ":"
      %dd= @tenant.force_vacate? ? "Yes" : "No"

.row
  %br
  .col-md-offset-3
    .form-actions
      = link_to content_tag(:i, "", :class => "fa fa-arrow-left ") + " " + t('.back', :default => t("helpers.links.back")), campus_tenants_path, :class => 'btn'
      = link_to content_tag(:i, "", :class => "fa fa-edit") + " " + t('.edit', :default => t("helpers.links.edit")), edit_campus_tenant_path(@tenant), :class => 'btn'
      = link_to content_tag(:i, "", :class => "fa fa-trash-o icon-white") + " " + t('.destroy', :default => t("helpers.links.destroy")), campus_tenant_path(@tenant), :method => 'delete', :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'     
