- model_class = User
.page-header
 %h1 Link User to Entity

= render 'shared/flashes'

.row
 = form_for @user, html: { class: 'form-horizontal' }  do |f| 
  = render 'shared/error_messages', object: f.object
  = f.hidden_field :userable_id, :value => @entity.id
  = f.hidden_field :userable_type, :value => @entity.class.name
  = f.hidden_field :college_id, :value => @entity.college_id
  /.div{:style =>"display: block;"}
  / = check_box_tag "user[role_ids][]", 3, true if @entity.class.name=="Student"
  //= check_box_tag "user[role_ids][]", role.id, @user.roles.include?(role)
  .col-md-3.col-md-offset-2
   .well
    = current_user.email
  .col-md-1
   .crosshairs
    = button_tag(type: 'submit', class: "btn btn-primary") do
     .i= fa_icon "link"
  .col-md-3
   .well
    = @entity.name
    = @entity.icno