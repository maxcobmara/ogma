- model_class = Cofile
.page-header
  %h1= t('cofile.list')#, :default => model_class.model_name.human.pluralize
  
.navbar.navbar-inverse{role: "navigation", style: "padding-right:40px;"}
  %ul.nav.navbar-nav
    %li= link_to content_tag(:li, fa_icon("asterisk", text: (t 'actions.new'))), '#'
  %ul.nav.navbar-nav.navbar-right
    %li.toga= link_to content_tag(:li, fa_icon("search", text: (t 'actions.search'))), "#", class: "toga"
    %li= link_to content_tag(:li, fa_icon("print", text: (t 'actions.print'))), "#"


.row
  %table.table-striped.table-hover.ogma
    %thead
      %tr
        %th= sort_link(@search, :cofileno, (t 'cofile.cofileno'))
        %th= sort_link(@search, :name, (t 'cofile.name'))
        %th= sort_link(@search, :location, (t 'cofile.location'))
        %th= sort_link(@search, :owner, (t 'cofile.owner'))
        %th= sort_link(@search, :onloan_to, (t 'cofile.onloan_to'))
        %th{style: "width:33%;"}= sort_link(@search, :onloandt,(t 'cofile.onloandt'))
        %th.ac{:colspan => "2"}= t 'control'
		

    %tbody
    = render "index_search"
    - @cofiles.each do |cofile|
      %tr
        %td= cofile.cofileno
        %td= cofile.name
        %td= cofile.location
        %td= cofile.owner.mykad_with_staff_name
        %td= cofile.staffloan_id? ? check_kin {cofile.borrower.mykad_with_staff_name} : ""
        %td= cofile.onloan? ? cofile.onloandt : ""
        %td{:width => "10px"}= link_to fa_icon("eye", :border => 0), :action => 'show', :id => cofile
        %td{:width => "10px"}= link_to fa_icon("trash-o", :border => 0, :title => 'Delete'), cofile, :confirm => 'Are you sure?', :method => :delete

  .right{style:"padding:0 30px; margin:0;"}= paginate @cofiles, :theme => 'twitter-bootstrap-3'