  /.form-group
  /  .col-sm-2.control-label
  /    Upload Book Image
  /  .col-md-2    
  /    = f.file_field :photo %
  /    %span{:style:"font-size:0.9em; font-family: courier"}
  /    =h @book.photo_file_name unless @book.photo_file_name.blank? +" - "
  /    =h (@book.photo_file_size/1024) unless @book.photo_file_name.blank? 
  /    Kb
  
  - if @book.photo.exists? then
    %dl.dl-horizontal
      %dt= t 'exam.examquestion.current_diagram'
      %dd
        = image_tag @book.photo.url,:style => "border: solid 1px;"
        %br
        %b= t'exam.examquestion.uploaded_file'
        = @book.photo_file_name
  .form-group
    /preview photo before upload
    .col-sm-2.control-label
      %b= t 'exam.examquestion.new_diagram'
    .col-md-6
      %img#uploadPreviewbook{:alt => (t 'exam.examquestion.browse_preview'), :style=>"width: 100px; height:100px;border: solid 1px; padding: 5px;"}/
      /%img#uploadPreviewbook{:src => "http://placekitten.com/200/300", :style=>"width: 100px; height:100px;"}/
  .form-group
    .col-sm-2.control-label
      = f.label t 'library.book.photo', for: :photo
    .col-md-6
      = f.file_field :photo, class: 'form-control', :onchange=>"PreviewImage();"

  .form-group
    .col-sm-2.control-label
      = f.label t 'library.book.links', for: :links
    .col-md-4
      = f.text_area :links, :size => '60x6', class: 'form-control'

:javascript
  function PreviewImage() {
    var oFReader = new FileReader();
    oFReader.readAsDataURL(document.getElementById("book_photo").files[0]);

    oFReader.onload = function(oFREvent) {
      document.getElementById("uploadPreviewbook").src = oFREvent.target.result;
    };
  };
 