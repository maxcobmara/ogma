$(document).ready(function(){
  $('#programme_course_type').on('change',function() {
    if(this.value=='Topic')
      $('.bbb').show(); 
    else if(this.value=='Subtopic')
      $('.bbb').show();
    else
      $('.bbb').hide();
  }).trigger('change');
});

