- model_class = College
.page-header
  %h1 College
  
.navbar.navbar-inverse{role: "navigation", style: "padding-right:40px;"}
  %ul.nav.navbar-nav
    %li= link_to content_tag(:li, fa_icon("asterisk", text: (t 'actions.new'))), new_college_path
  %ul.nav.navbar-nav.navbar-right
    %li.toga= link_to content_tag(:li, fa_icon("search", text: (t 'actions.search'))), "#", class: "toga"
    %li= link_to content_tag(:li, fa_icon("print", text: (t 'actions.print'))), "#", class: 'bogus'
 
.row
  %table.table-striped.table-hover.ogma
    %thead
      %tr
        %th code
        %th name
        %th address
        %th phone
        %th fax
        %th email
        %th logo
    %tbody
      - for college in @colleges
        %tr
          %td= college.code
          %td=link_to college.name, college_path(college)
          %td= college.address
          %td= college.phone
          %td= college.fax
          %td= college.email
          %td= college.logo

