- model_class = Staff
.page-header
  %h1= t('staff.staff_information.title')
  
.navbar.navbar-inverse{role: "navigation", style: "padding-right:40px;"}
  %ul.nav.navbar-nav
    %li= link_to content_tag(:li, fa_icon("asterisk", text: (t 'new'))), new_staff_path
  %ul.nav.navbar-nav.navbar-right
    %li.toga= link_to content_tag(:li, fa_icon("search", :autofocus => true, text: (t 'search'))), "#" , class: "toga"
    %li= link_to content_tag(:li, fa_icon("print", text: (t 'print'))), "#"

.right
  = form_tag staffs_path, :method => 'get' do
    = text_field_tag :search, params[:search], :placeholder => "MyKadNo, Name"
    = submit_tag I18n.t('search'), :icno => nil

.indextable
  %h2.left= t 'staff.list'
  %table.table-striped.table-hover.ogma
    %thead
      %tr
        %th.centre= sortable "icno", (t 'staff.icno') 
        %th.centre= sortable "name", (t 'staff.name')
        %th.centre= t 'staff.position'
        %th.ac.centre{:colspan => 4}= t 'control' 
		
    %tbody  
    - @staff_filtered.each do |staff|
      %tr
        %td.centre=h staff.formatted_mykad 
        %td.centre=h staff.name 
        %td.centre=h staff.position.blank? ? "-" : staff.position.name
        %td{:width => "10px"}= link_to fa_icon "file", :border => 0, :title => 'Show', :action => 'show', :id => staff 
        %td{:width => "10px"}= link_to fa_icon("pencil-square", :border => 0, :title => 'Edit'), :action => 'edit', :id => staff
        %td{:width => "10px"}= link_to fa_icon("trash-o", :border => 0, :title => 'Delete'), staff, :confirm => 'Are you sure?', :method => :delete
        %td{:width => "10px"}= link_to fa_icon("print", :border => 0, :title => 'Borang Maklumat Staf'), :action => 'borang_maklumat_staff', :id => staff
		



 
                  