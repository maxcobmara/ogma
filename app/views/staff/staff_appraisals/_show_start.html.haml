%fieldset
  %legend= t 'evaluation.form.title_part1'
  %table{:width => "100%"}
    %tr
      %td.leftcol= t 'evaluation.form.name'
      %td
        = h @staff_appraisal.appraised.mykad_with_staff_name
        \- (#{h @staff_appraisal.appraised.staffgrade.name})
    %tr
      %td.leftcol= t 'positions.name'
      %td= h @staff_appraisal.appraised.position.name
    %tr
      %td.leftcol= t 'evaluation.form.evaluationdate'
      %td= h (@staff_appraisal.evaluation_year).year
    - if @staff_appraisal.is_skt_submit == true
      %tr
        %td.leftcol Submitted for Endorsement on
        %td= h l(@staff_appraisal.skt_submit_on)
    - if @staff_appraisal.is_skt_endorsed == true
      %tr
        %td.leftcol Endorsement on
        %td
          = h l(@staff_appraisal.skt_submit_on)
          by #{h @staff_appraisal.eval1_officer.name}