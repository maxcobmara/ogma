- model_class = StaffAppraisal
.page-header
  %h1= t('staff.staff_appraisal.title')#, :default => model_class.model_name.human.pluralize
  
.navbar.navbar-inverse{role: "navigation", style: "padding-right:40px;"}
  %ul.nav.navbar-nav
    %li= link_to content_tag(:li, fa_icon("asterisk", text: (t 'actions.new'))), new_staff_staff_appraisal_path
  %ul.nav.navbar-nav.navbar-right
    %li= link_to content_tag(:li, fa_icon("search", text: (t 'actions.search'))), "#", class: "load_search_bar"
    %li= link_to content_tag(:li, fa_icon("print", text: (t 'actions.print'))), "#"

      
.row
  //.right{style:"padding:0 30px; margin:0;"}= paginate @staffs, :theme => 'twitter-bootstrap-3', :pagination_class => "pagination-sm"
  %table.table-striped.table-hover.ogma
    %thead
      %tr
        %th{style: "width:20%;"}= sort_link(@search, :icno, (t 'staff.icno'))
        %th= sort_link(@search, :name, (t 'staff.name'))
        %th{style: "width:20%;"}= sort_link(@search, :staff_position_name,(t 'staff.position'))
        %th{style: "width:10%;"}= sort_link(@search, :evaluate, (t 'helpers.label.staff_appraisal.evaluation_year'))
        %th= sort_link(@search, :status, (t 'staff_appraisal.status'))
		
      %tbody 
        - @staff_appraisals.each do |appraised|
          %tr
            %td= link_to appraised.appraised.formatted_mykad, staff_staff_appraisal_path(appraised)
            %td= appraised.appraised.name
            %td= appraised.appraised.position_for_staff
            %td= appraised.evaluation_year.strftime('%Y')
            %td= appraised.evaluation_status
		  
    .right{style:"padding:0 30px; margin:0;"}= paginate @staff_appraisals, :theme => 'twitter-bootstrap-3'

