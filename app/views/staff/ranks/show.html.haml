- model_class = Rank
.page-header
  %h1= t 'rank.title'
= render 'shared/flashes'

.row
  .col-md-offset-1
    / Nav tabs
    %ul.nav.nav-tabs
      %li.active= link_to (t 'rank.details'),"#rank_details", "data-toggle" => "tab"

    / display 
    .tab-content{style:"padding-top:1em"}
      #rankt_details.tab-pane.active  
        .col-md-8.col-md-offset-1
          %dl.dl-horizontal
            %dt= t 'rank.name'
            %dd=h @rank.name
            
            %dt= t 'rank.shortname'
            %dd=h @rank.try(:shortname)

            %dt= t 'rank.category'
            %dd=h (Rank::RANK_CATEGORY.find_all{|disp, value| value == @rank.category}).map{|disp, value| disp}[0]    
            
            %dt=t 'rank.employgrade_id'
            %dd=h @rank.try(:staffgrade).try(:name)

.row
  .col-md-7.col-md-offset-3
    %hr
    .form-actions
      = link_to content_tag(:i, "", :class => "fa fa-arrow-left ") + " " + t('back'), staff_ranks_path, :class => 'btn btn-default'
      = link_to content_tag(:i, "", :class => "fa fa-edit") + " " + (t 'actions.edit'), edit_staff_rank_path(@rank),  :class => 'btn btn-primary' 
      = link_to content_tag(:i, "", :class => "fa fa-trash-o icon-white") + " " + t('.destroy', :default => t("helpers.links.destroy")), |
          staff_rank_path(@rank),                                                                                                    |
          :method => 'delete',                                                                                                           |
          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },                   |
          :class => 'btn btn-danger'
