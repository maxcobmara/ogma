-model_class = Rank
.page-header
  %h1= t('rank.title')
= render 'shared/flashes'
  
.navbar.navbar-inverse{role: "navigation", style: "padding-right:40px;"}
  %ul.nav.navbar-nav
    - permitted_to? :create, :staff_ranks do
      %li= link_to content_tag(:li, fa_icon("asterisk", text: (t 'actions.new'))), new_staff_rank_path
  %ul.nav.navbar-nav.navbar-right
    %li.toga= link_to content_tag(:li, fa_icon("search", text: (t 'actions.search'))), "#", class: "index_search_bar"

.row
  %table.table-striped.table-hover.ogma
    %thead
      %tr
        %th{width: "15%"}=sort_link(@search, :shortname, (t 'rank.shortname'))
        %th{width: "40%"}=sort_link(@search, :name, (t 'rank.name'))
        %th{width: "30%"}=sort_link(@search, :category, (t 'rank.category'))
        %th{width: "15%"}=sort_link(@search, :grade, (t 'rank.employgrade_id'))
    %tbody
      = render "index_search"
      - @ranks.each do |rank|
        %tr
          %td=h rank.try(:shortname)
          %td=h link_to rank.name, staff_rank_path(rank)
          %td=h (Rank::RANK_CATEGORY.find_all{|disp, value| value == rank.category}).map {|disp, value| disp}[0]     
          %td.centre=h rank.try(:staffgrade).try(:name)
        
  .right{style:"padding:0 30px; margin:0;"}= paginate @ranks, :theme => 'twitter-bootstrap-3'            
            
            
