%fieldset
  = f.hidden_field :_destroy
  .row
    .col-sm-5= f.text_field :type_model, placeholder: 'Type or Model of the vehicle)', class: 'form-control'
    .col-sm-2= f.text_field :reg_no,     placeholder: 'Registration No',  class: 'form-control'
    .col-sm-2= f.text_field :cylinder_capacity, placeholder: 'Cylinder Capacity', class: 'form-control'
    .col-sm-1
      /= link_to content_tag(:i, "", class: "fa fa-trash-o"), data: {"data-toggle" => "tooltip", title: "Delete"}, class: "btn btn-danger remove_fields"
  :javascript
    $('.selectpicker').selectpicker('render');