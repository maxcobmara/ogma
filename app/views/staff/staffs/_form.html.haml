          .col-sm-1= t 'staff.loans.enddeduction'
          %hr
        = f.fields_for :loans do |builder|
          = render 'loan_fields', :f => builder
        .row
          /= link_to_add_fields image_tag("add.png", :border => 0, :title => t('addmore')), f, :loans
