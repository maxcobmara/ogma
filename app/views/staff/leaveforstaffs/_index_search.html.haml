= search_form_for @search, url: staff_leaveforstaffs_path,  class: "form-inline" do |f|
  %tr.search_row{:style => "display: none;"}
    %td= f.text_field :keyword_search, placeholder: (t 'staff_leave.id_or'), class: 'form-control'  
    %td= select_tag('q[leavetype_eq]', options_for_select([[t('actions.all_records'),''],[t("staff_leave.rest_leave"),1 ],[t("staff_leave.sick_leave"),2],[t("staff_leave.unrecord_leave"),3],[t("staff_leave.partial_leave"),4],[t("staff_leave.unpaid_leave"),5],[t("staff_leave.maternity_leave"),6],[t("staff_leave.hajj_leave"),7]]), class: 'selectpicker form-control',"data-width"=>'180px') 
    %td
      = f.text_field :leavestartdate_gteq, class: 'date_picker form-control', placeholder: (t 'staff_leave.from')
      = f.text_field :leavenddate_gteq, class: 'date_picker form-control', placeholder: (t 'staff_leave.to')
    %td= f.text_field :reason_cont, size: 8, :class => "form-control"
    %td= f.text_field :leavedays_eq, size: 8, :class => "form-control"
    %td
      .input-group
        = f.text_field :replacement_name_cont, size: 8, :class => "form-control"
        %span.input-group-btn
          %button.btn.btn-sm.btn-default.right{:type => "submit"}
            %i.fa.fa-search.fa-fw